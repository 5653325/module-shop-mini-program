<import src="../../../lib/wxParse/wxParse.wxml" />
<template name="widget">
    <view wx:for="{{widgets}}">
        <view wx:if="{{item.widgetZoneId==widgetZoneId}}">
            <view wx:if="{{item.widgetId==1}}">
                <view wx:for="{{ categorys }}" wx:for-index="idx" wx:for-item="item1">
                    <view wx:if="{{item1.widgetZoneId==widgetZoneId && item1.id == item.id}}">
                        <view class="m-menu">
                            <navigator class="item" url="/pages/category/category?id={{item2.id}}" wx:for="{{item1.categorys}}" wx:for-item="item2" wx:key="{{item2.id}}">
                                <image src="{{item2.thumbnailUrl}}" background-size="cover"></image>
                                <text>{{item2.name}}</text>
                            </navigator>
                        </view>
                    </view>
                </view>
            </view>
            <view wx:elif="{{item.widgetId==2}}">
                <view wx:for="{{ products }}" wx:for-index="idx" wx:for-item="item1">
                    <view class="good-grid" wx:if="{{item1.widgetZoneId==widgetZoneId && item1.id == item.id}}">
                        <view class="h">
                            <view>
                                <navigator url="../newGoods/newGoods">
                                    <text class="txt">{{item1.widgetName}}</text>
                                </navigator>
                            </view>
                        </view>
                        <view class="b">
                            <view class="item" wx:for="{{item1.products}}" wx:for-index="index" wx:for-item="item2" wx:key="{{item2.id}}">
                                <navigator url="../goods/goods?id={{item2.id}}">
                                    <image class="img" src="{{item2.thumbnailUrl}}" background-size="cover"></image>
                                    <text class="name">{{item2.name}}</text>
                                    <text class="price">￥{{item2.price}}</text>
                                </navigator>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view wx:elif="{{item.widgetId==3}}">
                <view wx:for="{{ simplProducts }}" wx:for-index="idx" wx:for-item="item1">
                    <view class="a-section a-popular" wx:if="{{item1.widgetZoneId==widgetZoneId && item1.id == item.id}}">
                        <view class="h">
                            <view>
                                <navigator url="../hotGoods/hotGoods">
                                    <text class="txt">{{item1.widgetName}}</text>
                                </navigator>
                            </view>
                        </view>
                        <view class="b">
                            <view class="item" wx:for="{{item1.products}}" wx:for-index="index" wx:for-item="item2" wx:key="{{item2.id}}">
                                <navigator url="/pages/goods/goods?id={{item2.id}}">
                                    <image class="img" src="{{item2.thumbnailUrl}}" background-size="cover"></image>
                                    <view class="right">
                                        <view class="text">
                                            <text class="name">{{item2.name}}</text>
                                            <text class="desc">{{item2.shortDescription}}</text>
                                            <text class="price">￥{{item2.price}}</text>
                                        </view>
                                    </view>
                                </navigator>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view wx:elif="{{item.widgetId==4}}">
                <view wx:for="{{ htmls }}" wx:for-index="idx" wx:for-item="item1">
                    <view wx:if="{{item1.widgetZoneId==widgetZoneId && item1.id == item.id}}">
                        <template is="wxParse" data="{{wxParseData:item1.htmlData}}" />
                    </view>
                </view>
            </view>
            <view wx:elif="{{item.widgetId==5}}">
                <view wx:for="{{ carouselWidgets }}" wx:for-index="idx" wx:for-item="itemCw">
                    <view wx:if="{{itemCw.widgetZoneId==widgetZoneId && itemCw.id == item.id}}">
                        <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
                            <swiper-item wx:for="{{ itemCw.items }}" wx:for-item="itemCwItem" wx:key="{{ itemCwItem.imageId }}">
                                <navigator url="{{ itemCwItem.targetUrl }}">
                                    <image src="{{ itemCwItem.imageUrl }}" background-size="cover"></image>
                                </navigator>
                            </swiper-item>
                        </swiper>
                    </view>
                </view>
            </view>
            <view wx:elif="{{item.widgetId==7}}">{{item.id}}</view>
        </view>
    </view>
</template>