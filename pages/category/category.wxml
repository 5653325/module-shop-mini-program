<view class="container">
    <view class="cate-nav">
        <scroll-view scroll-x="true" class="cate-nav-body" style="width: 750rpx;" scroll-left="{{scrollLeft}}">
            <view wx:for="{{categories}}" class="item {{ current.id == item.id ? 'active' : ''}}" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchCate2">
                <view class="name">{{item.name}}</view>
            </view>
        </scroll-view>
    </view>
    <scroll-view scroll-y="true">
        <view class="cate-item">
            <view class="h">
                <text class="name">{{current.name}}</text>
                <text wx:if="{{current.description}}" class="desc">{{current.description}}</text>
            </view>
            <view class="b">
                <navigator class="item {{(iindex + 1) % 2 == 0 ? 'item-b' : ''}}" url="/pages/goods/goods?id={{iitem.id}}" wx:for="{{pageData}}" wx:for-item="iitem" wx:for-index="iindex">
                    <image class="img" src="{{iitem.thumbnailUrl}}" background-size="cover"></image>
                    <text class="name">{{iitem.name}}</text>
                    <text class="price">￥{{iitem.price}}</text>
                </navigator>
            </view>
        </view>
    </scroll-view>
